# .env.production
NODE_ENV=production

# Ethereum
RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
PRIVATE_KEY=0x...
TREASURY_ADDRESS=0x...
ARB_EXECUTOR_ADDRESS=0x...

# Database
DATABASE_URL=postgresql://user:pass@host:5432/arbimind

# API
PORT_BACKEND=3002
PORT_BOT=3001
PORT=3000

# Security
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars
SESSION_SECRET=another-long-random-string-min-32-chars

# External APIs
COINGECKO_API=https://api.coingecko.com/api/v3
ETHERSCAN_API_KEY=your_etherscan_key_here

# Monitoring & Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOGTAIL_TOKEN=your_logtail_token_here

# Logging
LOG_LEVEL=info

# Bot Configuration
MIN_PROFIT_ETH=0.01
MAX_GAS_GWEI=50
MIN_PROFIT_THRESHOLD=0.005
SCAN_INTERVAL_MS=200

# Risk Management
MAX_SLIPPAGE_PERCENT=1.0
MAX_GAS_PRICE_GWEI=100
MIN_LIQUIDITY_ETH=10

# Private Relay (Optional)
PRIVATE_RELAY_URL=

# Frontend
NEXT_PUBLIC_API_URL=https://api.arbimind.app
NEXT_PUBLIC_WS_URL=wss://api.arbimind.app
