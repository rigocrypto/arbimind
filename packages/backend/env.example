# ArbiMind AI Backend Environment Variables

# Server Configuration
PORT=8000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=debug

# Frontend Configuration (comma/space separated for multiple origins)
# Prod: FRONTEND_URL=https://arbimind.vercel.app,http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Network (mainnet | testnet)
NETWORK=mainnet

# Testnet RPCs
ARBITRUM_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
SOLANA_RPC_URL=https://api.devnet.solana.com

# DexScreener chain filter
DEXSCREENER_CHAIN_ID=arbitrum:sepolia

# Referral rate (0.1 = 10% of profit credited to referrer)
REFERRAL_RATE=0.1

# Admin dashboard (required for /api/admin/*)
ADMIN_API_KEY=your-secret-admin-key

# AI service key (bot logging to /api/admin/ai-dashboard/predictions)
AI_SERVICE_KEY=your-service-key

# Treasury & execution wallets (for admin display)
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000
EXECUTION_ADDRESS=0x0000000000000000000000000000000000000000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/arbimind
REDIS_URL=redis://localhost:6379

# Postgres (for portfolio daily snapshots - optional)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
# MAX_SNAPSHOT_USERS_PER_RUN=500   # optional; cap users per snapshot run (default 500)

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# API Keys
ETHERSCAN_API_KEY=your-etherscan-api-key
INFURA_PROJECT_ID=your-infura-project-id
ALCHEMY_API_KEY=your-alchemy-api-key

# External Services
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# AI Model Configuration
MODEL_RETRAIN_INTERVAL=86400000  # 24 hours in milliseconds
MIN_TRAINING_DATA_POINTS=100
PREDICTION_CACHE_TTL=300000  # 5 minutes in milliseconds
ARB_MODEL_PATH=./models/arb-predictor

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000  # 30 seconds
WS_MAX_CONNECTIONS=1000

# Performance Monitoring
METRICS_COLLECTION_INTERVAL=60000  # 1 minute
PERFORMANCE_HISTORY_DAYS=30

# Arbitrage account addresses (deposit detection)
EVM_ARB_ACCOUNT=0x0000000000000000000000000000000000000000
# EVM_RPC_URL=   # optional; falls back to Alchemy/Infura
# PORTFOLIO_EVM_SCAN_NATIVE=true   # optional; enable native ETH deposit detection (Alchemy only, adds RPC cost)
# PORTFOLIO_EVM_NATIVE_LOOKBACK_DAYS=30   # optional; cap native ETH scan range (default 30)

# Solana (for /api/solana/tx/transfer)
SOLANA_ARB_ACCOUNT=YourArbAccountPubkeyBase58
SOLANA_FEE_WALLET=YourFeeWalletPubkeyBase58
SOLANA_FEE_PCT=0.5
SOLANA_FEE_MIN_SOL=0.001
SOLANA_CLUSTER=devnet
# SOLANA_RPC_URL=   # optional override

# Jupiter swaps (mainnet-beta, for /api/solana/jupiter/swap-tx)
# SOLANA_JUPITER_RPC_URL=https://api.mainnet-beta.solana.com

# CoinGecko price cache (portfolio USD conversion)
# COINGECKO_ENABLED=true
# COINGECKO_TTL_SECONDS=600
# COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
# COINGECKO_API_KEY=   # optional; for pro tier








