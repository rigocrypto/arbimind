{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm i -g pnpm && pnpm install --frozen-lockfile && pnpm --filter @arbimind/bot build"
  },
  "deploy": {
    "startCommand": "pnpm --filter @arbimind/bot start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
